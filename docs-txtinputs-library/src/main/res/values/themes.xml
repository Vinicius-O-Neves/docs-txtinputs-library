<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DocsTextInputLibrary" parent="Theme.Material3.Light.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomComponents.TextInputLayout.OutlinedBox" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="hintTextColor">@color/black</item>
        <item name="colorAccent">@color/cyan</item>
        <item name="colorPrimary">@color/cyan</item>
        <item name="strokeColor">@color/gray</item>
        <item name="boxStrokeColor">@color/gray</item>
        <item name="counterTextColor">@color/black</item>
        <item name="android:textColorHighlight">@color/cyan</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="errorTextColor">@color/red</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="App.helperTextTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="datePickerTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">#334355</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="boxStrokeColor">@color/gray</item>
    </style>

</resources>